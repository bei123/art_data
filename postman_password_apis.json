{
  "info": {
    "name": "微信小程序密码管理API",
    "description": "包含设置密码、修改密码、验证密码等接口",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "设置密码",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "用户登录后的token"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/wx/setPassword",
          "host": ["{{baseUrl}}"],
          "path": ["wx", "setPassword"]
        },
        "description": "为用户设置密码，密码长度至少6位"
      },
      "response": []
    },
    {
      "name": "修改密码",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "用户登录后的token"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"oldPassword\": \"123456\",\n  \"newPassword\": \"654321\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/wx/changePassword",
          "host": ["{{baseUrl}}"],
          "path": ["wx", "changePassword"]
        },
        "description": "修改用户密码，需要提供旧密码和新密码"
      },
      "response": []
    },
    {
      "name": "验证密码",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "用户登录后的token"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/wx/verifyPassword",
          "host": ["{{baseUrl}}"],
          "path": ["wx", "verifyPassword"]
        },
        "description": "验证用户密码是否正确"
      },
      "response": []
    },
    {
      "name": "用户登录",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"code\": \"{{wxCode}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/wx/login",
          "host": ["{{baseUrl}}"],
          "path": ["wx", "login"]
        },
        "description": "微信小程序登录，获取token"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "description": "API基础URL"
    },
    {
      "key": "token",
      "value": "",
      "description": "用户登录后的token"
    },
    {
      "key": "wxCode",
      "value": "",
      "description": "微信小程序登录code"
    }
  ]
} 